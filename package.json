{
  "name": "rll-site",
  "version": "0.1.0",
  "description": "Website for RLL",
  "engines": {
    "node": ">=8",
    "npm": ">=3"
  },
  "scripts": {
    "analyze-bundle": "babel-node ./tools/analyzeBundle.js",
    "build": "babel-node tools/build.js && npm run open:dist",
    "build-only": "npm run prebuild && babel-node tools/build.js && npm run build:server",
    "build:server": "netlify-lambda build api -c webpack.config.netlify-lambda.js",
    "checkForFaunaKey": "node ./tools/checkForFaunaKey.js",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "deploy": "netlify deploy && date",
    "deploy:prod": "npm run build-only && netlify deploy --prod",
    "lint": "esw webpack.config.* src tools --color",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch",
    "open:cover": "npm run test:cover && open-cli ./coverage/lcov-report/index.html",
    "open:dist": "babel-node tools/distServer.js",
    "open:src": "babel-node tools/srcServer.js",
    "prebuild": "npm run lint && npm run test && npm run clean-dist",
    "predeploy": "npm run build-only",
    "preinstall": "node tools/nodeVersionCheck.js",
    "prestart": "npm run start-message",
    "remove-dist": "rimraf ./dist",
    "create-db": "node ./tools/create-fauna-db.js",
    "reset-db": "node ./tools/bootstrap-fauna-database.js",
    "update-db": "node --stack-size=5000 ./tools/update-fauna-database.js",
    "start": "concurrently -k -r -s first \"npm run test:watch\" \"npm run open:src\" \"npm run lint:watch\"",
    "start-message": "babel-node tools/startMessage.js",
    "start:all": "npm-run-all --parallel checkForFaunaKey open:src start:server",
    "start:server": "netlify-lambda serve api -c webpack.config.netlify-lambda.js",
    "test": "jest",
    "test:CI": "jest",
    "test:cover": "npm run test -- --coverage ",
    "test:cover:CI": "npm run test:CI -- --coverage && cat ./coverage/lcov.info | node_modules/coveralls/bin/coveralls.js",
    "test:watch": "jest --watchAll"
  },
  "author": "elffaW",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@hot-loader/react-dom": "16.10.2",
    "@material-ui/core": "4.11.2",
    "@material-ui/icons": "4.11.2",
    "@material-ui/lab": "4.0.0-alpha.57",
    "chalk": "2.4.2",
    "chart.js": "2.9.4",
    "connected-react-router": "6.5.2",
    "dotenv": "8.2.0",
    "faunadb": "2.14.1",
    "google-spreadsheet": "3.1.15",
    "lodash": "4.17.19",
    "memoizee": "0.4.15",
    "object-assign": "4.1.1",
    "prop-types": "15.7.2",
    "proxy-middleware": "0.15.0",
    "react": "16.11.0",
    "react-chartjs-2": "2.11.1",
    "react-dom": "16.11.0",
    "react-hot-loader": "4.12.15",
    "react-markdown": "4.3.1",
    "react-pivot": "4.4.0",
    "react-player": "2.1.0",
    "react-router-dom": "5.1.2",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/core": "7.12.10",
    "@babel/node": "7.12.10",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-transform-react-constant-elements": "7.12.1",
    "@babel/plugin-transform-runtime": "7.12.10",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-react": "7.12.10",
    "@mdx-js/loader": "1.6.6",
    "@svgr/webpack": "5.4.0",
    "acorn": "7.2.0",
    "ajv": "6.10.2",
    "autoprefixer": "9.7.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "^25.0.0",
    "babel-loader": "8.2.2",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "browser-sync": "2.26.7",
    "concurrently": "5.2.0",
    "connect-history-api-fallback": "1.6.0",
    "coveralls": "3.0.7",
    "css-loader": "3.2.0",
    "cssnano": "4.1.10",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.15.1",
    "eslint": "6.6.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.16.0",
    "eslint-watch": "6.0.1",
    "file-loader": "4.2.0",
    "hard-source-webpack-plugin": "0.13.1",
    "history": "4.10.1",
    "html-loader": "1.1.0",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "^25.0.0",
    "jest-cli": "^25.0.0",
    "json-loader": "0.5.7",
    "markdown-loader": "5.1.0",
    "mini-css-extract-plugin": "0.8.0",
    "mockdate": "2.0.5",
    "netlify-cli": "2.51.0",
    "netlify-lambda": "1.6.3",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "open-cli": "5.0.0",
    "postcss-loader": "3.0.0",
    "prompt": "1.0.0",
    "raf": "3.4.1",
    "react-test-renderer": "16.11.0",
    "redux-immutable-state-invariant": "2.1.0",
    "redux-mock-store": "1.5.3",
    "replace": "1.2.0",
    "rimraf": "3.0.0",
    "sass-loader": "8.0.0",
    "style-loader": "1.0.0",
    "url-loader": "2.2.0",
    "webpack": "4.41.2",
    "webpack-bundle-analyzer": "3.8.0",
    "webpack-dev-middleware": "3.7.2",
    "webpack-hot-middleware": "2.25.0",
    "webpack-node-externals": "1.7.2"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": ""
  },
  "proxy": {
    "/.netlify/api": {
      "target": "http://localhost:9000",
      "pathRewrite": {
        "^/\\.netlify/api": ""
      }
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/assetsTransformer.js",
      "\\.(css)$": "<rootDir>/tools/assetsTransformer.js"
    },
    "setupFiles": [
      "raf/polyfill",
      "./tools/enzymeTestAdapterSetup.js"
    ]
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "@babel/preset-env",
          "@babel/preset-react"
        ],
        "plugins": [
          "@babel/plugin-transform-runtime",
          "@babel/plugin-proposal-class-properties",
          "react-hot-loader/babel"
        ]
      },
      "production": {
        "presets": [
          "@babel/preset-env",
          "@babel/preset-react"
        ],
        "plugins": [
          "@babel/plugin-transform-runtime",
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-transform-react-constant-elements",
          "transform-react-remove-prop-types"
        ]
      },
      "test": {
        "presets": [
          "@babel/preset-env",
          "@babel/preset-react"
        ],
        "plugins": [
          "@babel/plugin-transform-runtime",
          "@babel/plugin-proposal-class-properties"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb",
    "plugins": [
      "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true,
      "jest": true
    },
    "globals": {},
    "rules": {
      "no-console": "warn",
      "linebreak-style": "off",
      "no-underscore-dangle": "off",
      "global-require": "warn",
      "array-callback-return": "off",
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "max-len": [
        "error",
        120,
        2,
        {
          "ignoreUrls": true,
          "ignoreComments": true,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ]
    }
  }
}